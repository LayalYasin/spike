rule reference_bwa_index:
    input:
        "{prefix}%s{refgenome}.fa" % (config['dirs']['references'])
    output:
        bwt="{prefix}%s{refgenome}.fa.bwt" % (config['dirs']['references']),
        pac="{prefix}%s{refgenome}.fa.pac" % (config['dirs']['references']),
        ann="{prefix}%s{refgenome}.fa.ann" % (config['dirs']['references']),
        amb="{prefix}%s{refgenome}.fa.amb" % (config['dirs']['references']),
        sa="{prefix}%s{refgenome}.fa.sa" % (config['dirs']['references']),
    log:
        "{prefix}%sReferences/reference_bwa_index_{refgenome}.log" % (config['dirs']['logs'])
    benchmark:
        "{prefix}%sReferences/reference_bwa_index_{refgenome}.benchmark" % (config['dirs']['benchmarks'])
    conda:
        "../map/envs/spike_map.yaml"
    shell:
        "bwa index -a bwtsw {input} 2> {log} 1>&2"
        #hGRC37.fa.bwt

# 8ab1ad4b0d36b22c33b5f0ae9d9404a4  /data/Spike_refdata/References/hGRC37.fa.amb
# 7b89b29509852dfc59a6098463b821df  /data/Spike_refdata/References/hGRC37.fa.ann
# 42819dc2cd93fc15a79ec3a95f119831  /data/Spike_refdata/References/hGRC37.fa.bwt
# 848d2f3e268aa14df2e1014e77e6705c  /data/Spike_refdata/References/hGRC37.fa.pac
# 85313f4f9a907012e387191567b45c40  /data/Spike_refdata/References/hGRC37.fa.sa

# 8ab1ad4b0d36b22c33b5f0ae9d9404a4  /data/biotools/reference/hGRC37/hGRC37.fa.amb
# 7b89b29509852dfc59a6098463b821df  /data/biotools/reference/hGRC37/hGRC37.fa.ann
